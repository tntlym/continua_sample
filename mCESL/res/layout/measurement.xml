<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="480dip" android:layout_height="wrap_content">
	<TextView android:id="@+id/measurementname"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:text="@string/defaultobservation" android:textColor="@color/fontcolor"
		android:layout_marginLeft="10dip" />
	<EditText android:id="@+id/measurement" android:layout_below="@id/measurementname"
		android:layout_height="wrap_content" android:layout_width="180dip"
		android:layout_marginLeft="10dip" android:inputType="numberDecimal"
		android:maxLength="16" />
	<TextView android:id="@+id/measurementunit"
		android:layout_width="100dip" android:layout_height="wrap_content"
		android:text="@string/defaultobservation" android:layout_toRightOf="@id/measurement"
		android:layout_alignTop="@id/measurement" android:layout_marginLeft="10dip"
		android:layout_marginRight="10dip" />

</RelativeLayout>
